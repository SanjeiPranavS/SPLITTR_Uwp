                    </Button.Content>
                </Button>
                <themeButton:ThemeChangerButton/>
                <Button Style="{StaticResource AddWalletButtonStyle}"
                        RelativePanel.LeftOf="TitleBarAddExpenseButton"  >
                    <Button.Content>
                        <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}" FontSize="23" Glyph="&#xECCD;" />
                    </Button.Content>
                    <Button.Flyout>
                        <MenuFlyout>
                            <MenuFlyoutItem Text="Add Exepense" Click="{x:Bind _viewModel.AddButtonItemSelected}" />
                            <MenuFlyoutItem Text="Create Group" Click="{x:Bind _viewModel.AddButtonItemSelected}" />
                        </MenuFlyout>
                    </Button.Flyout>
                </Button>
                <Button Style="{StaticResource AddWalletButtonStyle}"
                        ToolTipService.ToolTip="Add Wallet Amount"  
                        Margin="0 0 10 0"
                        Click="{x:Bind _viewModel.AddWalletBalanceButtonClicked}"
                        Name="TitleBarAddExpenseButton"
                        RelativePanel.AlignRightWithPanel="True">
                    <Button.Content>
                        <Image Source="/Assets/icons/wallet.png"
                               Style="{StaticResource IconStyle}"/>
                    </Button.Content>
                </Button>
            </StackPanel>



        </Grid>
            <!-- Main Navigation View-->
        <SplitView  Grid.Row="1" 
                   PaneBackground="Transparent"
                   DisplayMode="Inline" 
                   PanePlacement="Right"
                   IsPaneOpen="True"
                   OpenPaneLength="250" 
                   x:Name="DashBoardSplitView"
                   Background="Transparent"
                   PaneClosed="DashBoardSplitView_OnPaneChanged"
                   PaneOpened="DashBoardSplitView_OnPaneChanged">
            <SplitView.Pane >
                <themeButton:SplittrDashBoard HorizontalAlignment="Stretch"
                                              VerticalAlignment="Stretch"
                                              Margin="10 0 0 0"/>
            </SplitView.Pane>
            <SplitView.Content>
                <controls:NavigationView Style="{StaticResource NarrowWindowNavigationViewStyle}"
                                                 x:Name="MainPageNavigationView"
                                                 Grid.Row="1"
                                                 IsSettingsVisible="False"
                                                 Margin="-1 0 0 0"
                                                 CompactPaneLength="0" OpenPaneLength="230"
                                                 IsPaneOpen="{x:Bind _viewModel.PaneVisibility,Mode=TwoWay}"
                                                 IsBackButtonVisible="Collapsed" 
                                                 IsPaneToggleButtonVisible="False" 
                                                 SelectionChanged="MainPageNavigationView_OnSelectionChanged" >
                    <controls:NavigationView.Resources>
                        <Style x:Key="UserGroupNavigationItemStyle" x:Name="UserGroupNavigationItemStyle" TargetType="controls:NavigationViewItem">
                            <Setter Property="ContentTemplate">
                                <Setter.Value>
                                    <DataTemplate x:DataType="model:GroupBobj">
                                        <themeButton:MainPageButtonControl ItemsSource="{x:Bind  GroupParticipants,Mode=OneWay}"
                                                                           TitleName="{x:Bind GroupName,Mode=OneWay}" 
                                                                           SelectionMode="None"
                                                                           HorizontalAlignment="Stretch"
                                        />
                                    </DataTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </controls:NavigationView.Resources>
                    <controls:NavigationView.MenuItems >
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" x:Name="AllExpense">
                            <TextBlock Text ="☵"  
                                               FontSize="20"
                                               Foreground="{ThemeResource AccentTextColorBrush}"
                                               ></TextBlock>
                            <TextBlock Text="All Expenses"
                                                     VerticalAlignment="Center"
                                                     Margin="10 0 0 0"
                                                     FontSize="15"></TextBlock>
                        </StackPanel>


                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" x:Name="RequestedByMe">
                            <Path Fill="{ThemeResource AccentTextColorBrush}" 
                                  Width="20"
                                  Height="20" 
                                  VerticalAlignment="Center" Stretch="Uniform"
