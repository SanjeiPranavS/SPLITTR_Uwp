<Page
    x:Class="SPLITTR_Uwp.Views.ExpensesListAndDetailViewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SPLITTR_Uwp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:vm="using:SPLITTR_Uwp.ViewModel.Models"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    Style="{ThemeResource HomePageBackground}"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Loaded="ExpensesListAndDetailViewPage_OnLoaded">
    <Page.Resources>
        <CollectionViewSource  x:Name="CollectionViewSource" x:Key="GroupedSource" IsSourceGrouped="True"/>
    </Page.Resources>
    <!--Binding Source={StaticResource GroupedSource}-->
    <Grid>
       
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="400"></ColumnDefinition>
            <ColumnDefinition Width="10"></ColumnDefinition>
            <ColumnDefinition MinWidth="400"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" CornerRadius="15">
            <ListView x:Name="ExpensesLIstView"  ItemsSource="{x:Bind CollectionViewSource.View , Mode=OneWay}" >
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem" BasedOn="{StaticResource ListViewItemExpanded}">
                        <Setter Property="HorizontalAlignment" Value="Stretch"/>
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="vm:ExpenseViewModel">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="50" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{x:Bind Note}" />
                            <TextBlock Grid.Column="1" Text="{x:Bind ExpenseStatus}"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
                <ListView.GroupStyle>
                    <GroupStyle>
                        <GroupStyle.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding ExpenseGroupHeader,Mode=OneWay}"  Margin="10,0" 
                                       Foreground="Black" FontWeight="Bold" />
                            </DataTemplate>
                        </GroupStyle.HeaderTemplate>
                        <GroupStyle.HeaderContainerStyle>
                            <Style TargetType="ListViewHeaderItem">
                                <Setter Property="FontFamily" Value="{ThemeResource ContentControlThemeFontFamily}" />
                                <Setter Property="FontSize" Value="{ThemeResource ListViewHeaderItemThemeFontSize}" />
                                <Setter Property="Margin" Value="0" />
                                <Setter Property="Padding" Value="12,8,12,0" />
                                <Setter Property="HorizontalContentAlignment" Value="Left" />
                                <Setter Property="VerticalContentAlignment" Value="Center" />
                                <Setter Property="MinHeight" Value="{ThemeResource ListViewHeaderItemMinHeight}" />
                                <Setter Property="UseSystemFocusVisuals" Value="True" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListViewHeaderItem">
                                            <ContentPresenter x:Name="ContentPresenter"
                                                    Background="{TemplateBinding Background}"
                                                    Content="{TemplateBinding Content}"
                                                    ContentTemplate="{TemplateBinding ContentTemplate}"
                                                    ContentTransitions="{TemplateBinding ContentTransitions}"
                                                    HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                    VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}" />
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </GroupStyle.HeaderContainerStyle>
                    </GroupStyle>
                </ListView.GroupStyle>
            </ListView>
             
        </Grid>
        <!--Column Grid Splitter-->
        <controls:GridSplitter Grid.Column="1" Width="10" ResizeBehavior="BasedOnAlignment"
                               ResizeDirection="Auto" Background="White"  CornerRadius="5"  >
            <controls:GridSplitter.Element>
                <Grid Background="White" >
                   
                </Grid>
            </controls:GridSplitter.Element>
        </controls:GridSplitter>
        <!-- ================================= -->
        <Grid Grid.Column="2" Background="DarkGray"  CornerRadius="15">
            <TextBlock FontSize="56" HorizontalAlignment="Center"  VerticalAlignment="Center"> coming soon</TextBlock>
        </Grid>

    </Grid>
</Page>
